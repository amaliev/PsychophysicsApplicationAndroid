<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anton.psychoexperiment.HomeScreen"
    tools:showIn="@layout/activity_home_screen">

    <TextView
        android:id="@+id/server"
        android:layout_width = "wrap_content"
        android:layout_height="wrap_content"
        android:text="Server: none"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:textColor="#B2BABB"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Psychophysics Experiment"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/server"
        android:layout_marginTop="100dp"
        android:textSize="36dp"
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/connect"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:text="Connect"
        android:textSize="40dp"
        android:textColor="#87CEFF"
        android:background="@android:color/transparent"
        android:onClick="connect"
        />
    <Button
        android:id="@+id/about"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/connect"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:text="About"
        android:textSize="40dp"
        android:textColor="#87CEFF"
        android:background="@android:color/transparent"
        android:onClick="toabout"
        />
    
</RelativeLayout>
